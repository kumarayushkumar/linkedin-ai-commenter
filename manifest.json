{
  "manifest_version": 3,
  "name": "LinkedIn Auto Commenter",
  "version": "1.0",
  "description": "Automatically comments 'nice post' on LinkedIn posts",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}